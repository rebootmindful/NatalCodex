# ================================================
# NatalCodex Environment Variables Configuration
# ================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ================================================
# KIE API Configuration (Image Generation)
# ================================================
KIE_API_KEY=996c9f218f6339fefd23eeb688f4bfbe

# Callback URL - MUST match your deployed domain
# Format: https://your-domain.com/api/kie/callback
KIE_CALLBACK_URL=https://natalcodex.vercel.app/api/kie/callback

# Callback Token - Generate a random secure token
# Example: nc_webhook_2024_xJ9kL2mP
# Generate with: node -e "console.log('nc_webhook_' + Date.now() + '_' + Math.random().toString(36).slice(2))"
KIE_CALLBACK_TOKEN=YOUR_SECURE_TOKEN_HERE

# ================================================
# Database Configuration (Neon Postgres)
# ================================================
# Get this from Neon dashboard: https://console.neon.tech/
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/natalcodex?sslmode=require

# Database pool size (optional)
DB_POOL_MAX=10

# ================================================
# Storage Backend Configuration
# ================================================
# Options: "postgres" | "vercelkv" | "file"
# Recommended for Vercel: postgres
KIE_STORE_BACKEND=postgres

# Enable dual write to both DB and temp file (for backup)
KIE_STORE_DUAL_WRITE=true

# Tenant ID (for multi-tenant support, default: "default")
KIE_DEFAULT_TENANT=default

# ================================================
# Report Generation (AI/LLM)
# ================================================
# LLM API endpoint for report generation (optional)
# If not set, will use mock reports
REPORT_LLM_ENDPOINT=

# LLM API Key (optional)
REPORT_LLM_API_KEY=

# ================================================
# Application Configuration
# ================================================
# Base URL of your application
NEXT_PUBLIC_BASE_URL=https://natalcodex.vercel.app

# Environment (development | staging | production)
NEXT_PUBLIC_APP_ENV=production

# ================================================
# Optional: Email Service (Phase 2)
# ================================================
# RESEND_API_KEY=
# FROM_EMAIL=noreply@natalcodex.com

# ================================================
# Optional: Analytics (Phase 2)
# ================================================
# VERCEL_ANALYTICS_ID=
# GOOGLE_ANALYTICS_ID=

# ================================================
# Optional: Vercel KV (Alternative to Postgres)
# ================================================
# Get these from Vercel KV dashboard
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
