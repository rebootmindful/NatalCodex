# KIE_CALLBACK_TOKEN=YOUR_SECURE_TOKEN_HERE

# ================================================
# Database Configuration (Neon Postgres)
# ================================================
# Get this from Neon dashboard: https://console.neon.tech/
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/natalcodex?sslmode=require

# Database pool size (optional)
DB_POOL_MAX=10

# ================================================
# Storage Backend Configuration
# ================================================
# Options: "postgres" | "vercelkv" | "file"
# Recommended for Vercel: postgres
KIE_STORE_BACKEND=postgres

# Enable dual write to both DB and temp file (for backup)
KIE_STORE_DUAL_WRITE=true

# Tenant ID (for multi-tenant support, default: "default")
KIE_DEFAULT_TENANT=default

# ================================================
# Report Generation (AI/LLM)
# ================================================
# LLM API endpoint for report generation (optional)
# If not set, will use mock reports
REPORT_LLM_ENDPOINT=

# LLM API Key (optional)
REPORT_LLM_API_KEY=

# ================================================
# Authentication (JWT)
# ================================================
# Secret key for JWT token signing (MUST change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://natalcodex.com/api/auth?action=google-callback

# ================================================
# Application Configuration
# ================================================
# Base URL of your application
NEXT_PUBLIC_BASE_URL=https://natalcodex.vercel.app

# Environment (development | staging | production)
NEXT_PUBLIC_APP_ENV=production

